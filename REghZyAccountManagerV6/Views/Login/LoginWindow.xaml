<Window x:Class="REghZyAccountManagerV6.Views.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REghZyAccountManagerV6.Views.Login" 
        d:DataContext="{d:DesignInstance Type=local:LoginViewModel}"
        mc:Ignorable="d"
        Title="LoginWindow" Height="225" Width="400"
        Style="{StaticResource CustomWindowStyle}">
    <Grid Margin="20">
        <TextBlock Text="Account Manager v6.0.4" FontSize="20" HorizontalAlignment="Center" Padding="5" VerticalAlignment="Top"/>
        <TextBlock Text="Password" HorizontalAlignment="Left" Padding="5" VerticalAlignment="Bottom" Margin="0,0,0,52"/>
        <TextBox Text="Password" Padding="5" VerticalAlignment="Bottom" Margin="65,0,0,50"/>
        <Button Margin="275,0,0,0" Content="Login" Height="40" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
