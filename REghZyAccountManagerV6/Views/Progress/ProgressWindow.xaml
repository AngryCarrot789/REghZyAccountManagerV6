<views:BaseWindow x:Class="REghZyAccountManagerV6.Views.Progress.ProgressWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:views="clr-namespace:REghZyAccountManagerV6.Views"
                  xmlns:progress="clr-namespace:REghZyAccountManagerV6.Views.Progress"
                  mc:Ignorable="d"
                  d:DataContext="{d:DesignInstance progress:ProgressViewModel}"
                  Title="Progress" Height="250" Width="400"
                  WindowStyle="ToolWindow" Style="{StaticResource CustomWindowStyle}">
    <Grid>
        <TextBlock Text="{Binding Message}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 20 10 72"/>
        <ProgressBar IsIndeterminate="True"
                     VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
                     Margin="10 0 10 20" Height="32"/>
    </Grid>
</views:BaseWindow>
